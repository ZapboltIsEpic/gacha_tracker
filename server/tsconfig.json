{
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
      "target": "es6", 
      "module": "commonjs", 
      "rootDir": "./src",
      "esModuleInterop": true,  
      "forceConsistentCasingInFileNames": true, 
      "strict": true,     
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "outDir": "./dist",
      "sourceMap": true
    }
}